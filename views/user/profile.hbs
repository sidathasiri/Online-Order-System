<style>
    h1, small, h2{
        color: white;
    }
</style>

<div class="row">
    <div class="col-md-3 pull-left" >
        <div class="list-group">
            <a href="/user/profile" class="list-group-item active">
                My orders</a>
            <a href="/user/myReservations" class="list-group-item ">
                My Reservations</a>
            <a href="/user/reserveTable" class="list-group-item ">
                Reserve Table</a>
            <a href="/user/updateProfile" class="list-group-item ">
                Update Profile</a>
        </div>
    </div>

    <div class="col-md-8 ">
        <h1>Welcome <small>{{name}}</small></h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <ul class="list-group">
                            {{#each this.items}}
                                <li class="list-group-item">
                                    <span class="badge">{{ this.price }}</span>
                                    {{ this.item.name }} | {{ this.qty }}
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="panel-footer"><strong>Total Price:Rs.{{ this.cart.totalPrice }}/=</strong> <span class="pull-right"> <strong>Date:</strong> {{ this.date}}</span></div>
                </div>
            </div>
        {{/each}}

    </div>
</div>