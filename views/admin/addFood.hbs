<style>
    h1, label, h3{
        color: white;
    }
</style>

{{#if hasErrors}}
    <div class="alert alert-info">
        {{#each messages}}
            <p>{{ this }}</p>
        {{/each}}
    </div>
{{/if}}

{{#if hasValidationErrors}}
    <div class="alert alert-danger">
        {{#each errors}}
            <p>{{ this }}</p>
        {{/each}}
    </div>
{{/if}}

    <div class="col-md-3 pull-left" >
        <div class="list-group">
            <a href="/admin/adminDashboard" class="list-group-item ">
                View orders
            </a>
            <a href="/admin/tableReservations" class="list-group-item ">View Table Reservations</a>
            <a href="/admin/addFood" class="list-group-item active">Add Food items</a>
            <a href="/admin/setAvailableFood" class="list-group-item ">Set today available food</a>
            <a href="/admin/myOrders" class="list-group-item">My orders</a>

        </div>
    </div>

    <div class="col-md-8">
        <div class="page-header">
            <h1>Add Food</h1>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-8">
                <input type="button" id="addCatBtn" class="btn btn-default" value="New Category">
            </div>
        </div>

        <div class="row">
            <form class="form-horizontal" action="/admin/addNewCategory" method="post" id="catForm" style="display: none">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="categoryName" placeholder="Category Name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-4">
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <button type="submit" class="btn btn-default">Add Category</button>
                    </div>
                </div>
            </form>
        </div>

        <form class="form-horizontal" action="/admin/addNewFood" enctype='multipart/form-data' method="post">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Item Name</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="itemName" placeholder="Name">
                </div>
            </div>
            <div class="form-group">
                <label for="price" class="col-sm-2 control-label">Price</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="price" placeholder="Price">
                </div>
            </div>

            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">Category</label>
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        {{#each names}}
                            <option>{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>

            </div>

            <div class="form-group">
                <label for="image" class="col-sm-2 control-label">Choose Image</label>
                <div class="col-sm-3">
                                 <input type="file" name="fileUpload" required>

                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button type="submit" class="btn btn-default">Add</button>
                </div>
            </div>
        </form>
    </div>

    <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('#addCatBtn').click(function () {
                $('#catForm').slideToggle('slow');
            });
        });
    </script>






