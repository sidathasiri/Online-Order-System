<style>
    h1, label, h3{
        color: white;
    }
</style>

{{#if success}}
    <div class="alert alert-success">
            <p>{{ success }}</p>
    </div>
{{/if}}

{{#if hasValidationErrors}}
    <div class="alert alert-danger">
        {{#each errors}}
            <p>{{ this }}</p>
        {{/each}}
    </div>
{{/if}}

<div class="col-md-3 pull-left" >
    <div class="list-group">
        <a href="/admin/adminDashboard" class="list-group-item ">
            View orders
        </a>
        <a href="/admin/tableReservations" class="list-group-item ">View Table Reservations</a>
        <a href="/admin/addFood" class="list-group-item">Add Food items</a>
        <a href="/admin/addTable" class="list-group-item active">Add Tables</a>
        <a href="/admin/setAvailableFood" class="list-group-item ">Set today available food</a>
        <a href="/admin/myOrders" class="list-group-item">My orders</a>

    </div>
</div>

<div class="col-md-8">
    <div class="page-header">
        <h1>Add Tables</h1>
    </div>


    <form class="form-horizontal" action="/admin/addNewTable" enctype='multipart/form-data' method="post">
        <div class="form-group">
            <label for="capacity" class="col-sm-2 control-label">Table Capacity</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="capacity" placeholder="Table capacity">
            </div>
        </div>

        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Table Price</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="price" placeholder="Table Price">
            </div>
        </div>


        <div class="form-group">
            <label for="image" class="col-sm-2 control-label">Choose Image</label>
            <div class="col-sm-3">
                <input type="file" name="fileUpload" required>

            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-default">Add</button>
            </div>
        </div>
    </form>
</div>

<script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>








