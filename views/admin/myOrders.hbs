<div class="row">
    <div class="col-md-3 pull-left" >
        <div class="list-group">
            <a href="/admin/adminDashboard" class="list-group-item ">
                View orders
            </a>
            <a href="/admin/addFood" class="list-group-item ">Add Food items</a>
            <a href="/admin/setAvailableFood" class="list-group-item ">Set today available food</a>
            <a href="/admin/myOrders" class="list-group-item active">My orders</a>

        </div>
    </div>
    <div class="col-md-8">
        <div class="page-header">
            <h1>My Orders <small> Review your past Orders</small></h1>
        </div>
        {{#each orders}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items}}
                            <li class="list-group-item">
                                <span class="badge">{{ this.price }}</span>
                                {{ this.item.name }} | {{ this.qty }}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer"><strong>Total Price:Rs.{{ this.cart.totalPrice }}/=</strong> <span class="pull-right"> <strong>Date:</strong> {{ this.date}}</span></div>
            </div>
        {{/each}}
    </div>
</div>