<div class="container">
<ul class="nav nav-pills">
    <li role="presentation" class="active"><a href="/">Packages</a></li>
    <li role="presentation"><a href="/burgers">Burgers</a></li>
    <li role="presentation"><a href="/snacks">Snacks</a></li>
    <li role="presentation"><a href="/desserts">Desserts</a></li>
    <li role="presentation"><a href="/beverages">Beverages</a></li>
</ul>
</div>
<br>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessage}}hidden{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>

{{#each packages }}
<div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail my-thumbnail">
            <img src="{{this.image_path}}" class="image-responsive" alt="...">
            <div class="caption">
                <h3>{{this.name}}</h3>
                <div class="clearfix">
                    <div class="price pull-left">Rs.{{this.price}}/=</div>
                    <a id="{{this.id}}" class="btn btn-success pull-right" role="button">Add to cart</a>
                </div>
            </div>
         </div>
    </div>
    {{/each}}
</div>
{{/each}}

<script>
    $(document).ready(function(){
        $("a[role='button']").click(function(){
            $.get("/add-to-cart/"+this.id+"/package", function(data){
                $("#shoping_cart").text(data.qty);
            });
        });
    });
</script>









